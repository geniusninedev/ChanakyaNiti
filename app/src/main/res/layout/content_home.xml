<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="com.genius.android.chanakyaniti.ChanakyaNiti.Home"
    tools:showIn="@layout/app_bar_home"
    android:background="@drawable/wooden">


    <TextView
        android:text="Chanakya Neeti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Neeti"
        android:textSize="20pt"
        android:textColor="#000000"
        android:fontFamily="cursive"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chankyaa"
        android:id="@+id/imageView2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
       />

    <Button
        android:text="In English"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/English"
        android:fontFamily="cursive"
        android:textSize="15pt"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#000000"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="In Hindi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Hindi"
        android:textColor="#000000"
        android:textSize="15pt"
       android:fontFamily="cursive"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignBaseline="@+id/English"
        android:layout_alignBottom="@+id/English"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
